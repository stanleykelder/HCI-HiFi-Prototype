<?xml version="1.0" encoding="utf-8"?>


<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    app:layout_behavior="@string/appbar_scrolling_view_behavior">


    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent">


        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical" >



            <LinearLayout
                android:id="@+id/profile_card_layout"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center_horizontal"
                android:orientation="vertical">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:gravity="center"
                    android:orientation="vertical"/>

                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="195dp"
                    android:gravity="center_horizontal"
                    android:orientation="horizontal">

                    <LinearLayout
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="20dp"
                        android:layout_marginTop="20dp"
                        android:layout_marginRight="20dp"
                        android:layout_marginBottom="20dp"
                        android:gravity="center"
                        android:orientation="vertical">

                        <TextView
                            android:id="@+id/friends"
                            android:layout_width="90dp"
                            android:layout_height="wrap_content"
                            android:layout_marginBottom="9dp"
                            android:text="@string/friends"
                            android:textAppearance="@style/h3"
                            app:fontFamily="@font/comfortaa" />

                        <TextView
                            android:id="@+id/friends_number"
                            android:layout_width="90dp"
                            android:layout_height="90dp"
                            android:background="@drawable/friends_level"
                            android:gravity="center"
                            android:text="5"
                            android:textAppearance="@style/h1"
                            android:textColor="#FFFFFF"
                            app:fontFamily="@font/open_sans_bold" />

                    </LinearLayout>

                    <LinearLayout
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="20dp"
                        android:layout_marginTop="20dp"
                        android:layout_marginBottom="20dp"
                        android:gravity="center_horizontal"
                        android:orientation="vertical">

                        <TextView
                            android:id="@+id/donations"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_alignParentStart="true"
                            android:layout_alignParentBottom="true"
                            android:layout_centerHorizontal="true"
                            android:layout_marginBottom="9dp"
                            android:text="@string/donations"
                            android:textAppearance="@style/h3"
                            app:fontFamily="@font/comfortaa" />

                        <RelativeLayout
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_gravity="center">

                            <TextView
                                android:id="@+id/donation_number"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_alignLeft="@id/donation_level"
                                android:layout_alignTop="@id/donation_level"
                                android:layout_alignRight="@id/donation_level"
                                android:layout_alignBottom="@id/donation_level"
                                android:background="@drawable/ring_background"
                                android:gravity="center"
                                android:text="8"
                                android:textAppearance="@style/h1"
                                android:textColor="#56A24E"
                                app:fontFamily="@font/open_sans_bold" />

                            <ProgressBar
                                android:id="@+id/donation_level"
                                style="?android:progressBarStyleHorizontal"
                                android:layout_width="90dp"
                                android:layout_height="90dp"
                                android:progress="0"
                                android:progressDrawable="@drawable/donation_level"
                                android:rotation="90" />


                        </RelativeLayout>


                    </LinearLayout>

                    <LinearLayout
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="20dp"
                        android:layout_marginTop="20dp"
                        android:layout_marginBottom="20dp"
                        android:gravity="center"
                        android:orientation="vertical">

                        <TextView
                            android:id="@+id/helps"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_alignParentStart="true"
                            android:layout_alignParentLeft="true"
                            android:layout_alignParentTop="true"
                            android:layout_centerHorizontal="true"
                            android:layout_marginBottom="9dp"
                            android:text="@string/helps"
                            android:textAppearance="@style/h3"
                            app:fontFamily="@font/comfortaa" />

                        <RelativeLayout
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_gravity="center">

                            <TextView
                                android:id="@+id/helps_number"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_alignLeft="@id/help_level"
                                android:layout_alignTop="@id/help_level"
                                android:layout_alignRight="@id/help_level"
                                android:layout_alignBottom="@id/help_level"
                                android:background="@drawable/ring_background"
                                android:gravity="center"
                                android:text="3"
                                android:textAppearance="@style/h1"
                                android:textColor="#C38209"
                                app:fontFamily="@font/open_sans_bold" />

                            <ProgressBar
                                android:id="@+id/help_level"
                                style="?android:progressBarStyleHorizontal"
                                android:layout_width="90dp"
                                android:layout_height="90dp"
                                android:progress="0"
                                android:progressDrawable="@drawable/help_level"
                                android:rotation="90"
                                android:text="@string/donations" />


                        </RelativeLayout>

                    </LinearLayout>

                </LinearLayout>

            </LinearLayout>


            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="257dp"
                android:layout_marginBottom="30dp"
                android:orientation="vertical">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:gravity="center_horizontal|top"
                    android:orientation="horizontal">

                    <TextView
                        android:id="@+id/Name"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:gravity="center"
                        android:text="Name"
                        android:textAppearance="@style/h4"
                        android:textSize="18sp"
                        app:fontFamily="@font/comfortaa" />

                    <TextView
                        android:id="@+id/textView12"
                        android:layout_width="9dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:gravity="center"
                        android:text="Donations"
                        android:textAppearance="@style/h4"
                        android:textSize="18sp"
                        app:fontFamily="@font/comfortaa" />

                    <TextView
                        android:id="@+id/hes_filter"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:gravity="center"
                        android:text="Helps"
                        android:textAppearance="@style/h4"
                        android:textSize="18sp"
                        app:fontFamily="@font/comfortaa" />

                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:gravity="center_horizontal|top"
                    android:orientation="horizontal">

                    <TextView
                        android:id="@+id/textView14"
                        android:layout_width="142dp"
                        android:layout_height="match_parent"
                        android:layout_weight="1"
                        android:gravity="center"
                        android:text="Amelia Earhart"
                        android:textAppearance="@style/h5"
                        app:fontFamily="@font/comfortaa" />

                    <TextView
                        android:id="@+id/textView13"
                        android:layout_width="105dp"
                        android:layout_height="match_parent"
                        android:layout_weight="1"
                        android:gravity="center"
                        android:text="10"
                        android:textAppearance="@style/h5"
                        android:textColor="@color/good"
                        app:fontFamily="@font/comfortaa" />

                    <TextView
                        android:id="@+id/textView15"
                        android:layout_width="106dp"
                        android:layout_height="match_parent"
                        android:layout_weight="1"
                        android:gravity="center"
                        android:text="3"
                        android:textAppearance="@style/h5"
                        android:textColor="@color/regular"
                        app:fontFamily="@font/comfortaa" />

                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:gravity="center_horizontal|top"
                    android:orientation="horizontal">

                    <TextView
                        android:id="@+id/textView14"
                        android:layout_width="142dp"
                        android:layout_height="match_parent"
                        android:layout_weight="1"
                        android:gravity="center"
                        android:text="Alicia Malcolm"
                        android:textAppearance="@style/h5"
                        app:fontFamily="@font/comfortaa"
                        tools:ignore="DuplicateIds" />

                    <TextView
                        android:id="@+id/textView13"
                        android:layout_width="105dp"
                        android:layout_height="match_parent"
                        android:layout_weight="1"
                        android:gravity="center"
                        android:text="7"
                        android:textAppearance="@style/h5"
                        android:textColor="@color/good"
                        app:fontFamily="@font/comfortaa"
                        tools:ignore="DuplicateIds" />

                    <TextView
                        android:id="@+id/textView15"
                        android:layout_width="106dp"
                        android:layout_height="match_parent"
                        android:layout_weight="1"
                        android:gravity="center"
                        android:text="1"
                        android:textAppearance="@style/h5"
                        android:textColor="@color/regular"
                        app:fontFamily="@font/comfortaa"
                        tools:ignore="DuplicateIds" />

                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:gravity="center_horizontal|top"
                    android:orientation="horizontal">

                    <TextView
                        android:id="@+id/textView14"
                        android:layout_width="142dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:gravity="center"
                        android:text="Alex Blackwell"
                        android:textAppearance="@style/h5"
                        app:fontFamily="@font/comfortaa"
                        tools:ignore="DuplicateIds" />

                    <TextView
                        android:id="@+id/textView13"
                        android:layout_width="105dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:gravity="center"
                        android:text="6"
                        android:textAppearance="@style/h5"
                        android:textColor="@color/good"
                        app:fontFamily="@font/comfortaa"
                        tools:ignore="DuplicateIds" />

                    <TextView
                        android:id="@+id/textView15"
                        android:layout_width="106dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:gravity="center"
                        android:text="1"
                        android:textAppearance="@style/h5"
                        android:textColor="@color/regular"
                        app:fontFamily="@font/comfortaa"
                        tools:ignore="DuplicateIds" />

                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="156dp"
                    android:gravity="center_horizontal|top"
                    android:orientation="horizontal">

                    <TextView
                        android:id="@+id/textView14"
                        android:layout_width="142dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:gravity="center"
                        android:text="Aaron Bennet"
                        android:textAppearance="@style/h5"
                        app:fontFamily="@font/comfortaa"
                        tools:ignore="DuplicateIds" />

                    <TextView
                        android:id="@+id/textView13"
                        android:layout_width="105dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:gravity="center"
                        android:text="2"
                        android:textAppearance="@style/h5"
                        android:textColor="@color/good"
                        app:fontFamily="@font/comfortaa"
                        tools:ignore="DuplicateIds" />

                    <TextView
                        android:id="@+id/textView15"
                        android:layout_width="106dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:gravity="center"
                        android:text="5"
                        android:textAppearance="@style/h5"
                        android:textColor="@color/regular"
                        app:fontFamily="@font/comfortaa"
                        tools:ignore="DuplicateIds" />

                </LinearLayout>

            </LinearLayout>

        </LinearLayout>
    </ScrollView>

</LinearLayout>